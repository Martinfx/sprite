    usp = (Address) (machCurStatePtr->userState.regState.regs[SP] - 4);
    if (pid == 0) {
	pid = PROC_MY_PID;
    }
    status = Proc_GetFamilyID(pid, (int *)usp);
    if (status == SUCCESS) {
	(void)Vm_CopyIn(sizeof(int), usp, 
		        (Address)&machCurStatePtr->userState.unixRetVal);
    }
    return(status);
}

