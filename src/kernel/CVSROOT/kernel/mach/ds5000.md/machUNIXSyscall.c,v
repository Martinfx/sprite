MachUNIXCreat(pathName, permissions)
    char *pathName;		/* The name of the file to create */
    int permissions;		/* Permission mask to use on creation */
{
    return(MachUNIXOpen(pathName,  FS_CREATE|FS_TRUNC|FS_WRITE,
			permissions));
}

