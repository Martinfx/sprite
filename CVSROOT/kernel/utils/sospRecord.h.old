#define	SOSP_ADD_PREFIX_TRACE(clientID, rpcID)\
{\
	unsigned int	sospBuffer[3];\
\
	sospBuffer[0] = SOSP_PREFIX;\
	sospBuffer[1] = clientID;\
	sospBuffer[2] = rpcID;\
	TraceLog_Insert(SOSP91TracePtr, (Address) sospBuffer,\
		(3 * sizeof(int)), SOSP_PREFIX);\
}

