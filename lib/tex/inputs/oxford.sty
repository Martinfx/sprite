     {\@ssect{#3}{#4}{#5}{#6}}{\@dblarg{\@sect{#1}{#2}{#3}{#4}{#5}{#6}{#7}}}}

%
% This simply puts a period after the section number.
%
\def\@sect#1#2#3#4#5#6#7[#8]#9{\ifnum #2>\c@secnumdepth
     \def\@svsec{}\else 
     \refstepcounter{#1}\edef\@svsec{{#7\csname the#1\endcsname.}\hskip 1em}\fi
     \@tempskipa #5\relax
      \ifdim \@tempskipa>\z@ 
        \begingroup #6\relax
          \@hangfrom{\hskip #3\relax\@svsec}{\interlinepenalty \@M #9\par}%
        \endgroup
       \csname #1mark\endcsname{#8}\addcontentsline
         {toc}{#1}{\ifnum #2>\c@secnumdepth \else
                      \protect\numberline{\csname the#1\endcsname}\fi
                    #8}\else
        \def\@svsechd{#6\hskip #3\@svsec #9\csname #1mark\endcsname
                      {#8}\addcontentsline
                           {toc}{#1}{\ifnum #2>\c@secnumdepth \else
                             \protect\numberline{\csname the#1\endcsname}\fi
                       #8}}\fi
     \@xsect{#5}}


