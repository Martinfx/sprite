\def\@makechapterhead#1{             % Heading for \chapter command
  \vspace*{3.5pc}      % Space at top of text page. 7pc-18pt-headsep-headheight
  { \parindent 0pt \centering
    \ifnum \c@secnumdepth >\m@ne     % IF secnumdepth > -1 THEN
      \xviiONxviii\bf \thechapter % Print 'Chapter' and number.
    \par 
    \vskip 10pt \fi                    % Between number and title. 2pc-14pt
    \xiiONxiv\bf                        % Title.
    \uppercase{#1}\par
    \nobreak                         % TeX penalty to prevent page break.
    \vskip 2pc                      % Space between title and text. 3pc-12pt
    \nobreak
    \vskip 0pt		% fools the code to remove glue between section heads
  } }

\def\@makeschapterhead#1{             % Heading for \chapter* command
  \vspace*{7pc}\vspace*{-14pt}        % Space at top of page.
  { \parindent 0pt \centering 
    \xiiONxiv\bf                        % Title.
    \uppercase{#1}\par 
    \nobreak                        % TeX penalty to prevent page break.
    \vskip 2pc                      % Space between title and text.
  } }

